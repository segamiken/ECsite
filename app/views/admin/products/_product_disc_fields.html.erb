<div class="nested-fields">
  <div class="form-group">
    <%= f.label :disc_title, "DISCのタイトル" %>
    <%= f.text_field :disc_title %><br>
    <%= link_to_remove_association "DISCを削除", f %>
  </div>

  <div class="disc_singers">
    <%= f.fields_for :disc_singers do |singer| %>
      <%= render 'disc_singer_fields', f: singer %>
    <%end%>
    <div class="links">
      <%= link_to_add_association "歌手を追加", f, :disc_singers %>
    </div>
  </div>

  <div class="disc_songs">
    <%= f.fields_for :disc_songs do |song| %>
      <%= render 'disc_song_fields', f: song %>
    <%end%>
    <div class="links">
      <%= link_to_add_association "歌を追加", f, :disc_songs %>
    </div>
  </div>
</div>
