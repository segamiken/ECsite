<h2>ユーザーの編集</h2>

<%= form_for(@customer) do |f| %>
  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :last_name, "苗字" %><br />
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.label :first_name, "名前" %><br />
    <%= f.text_field :first_name %>
  </div>

 <div class="field">
    <%= f.label :last_name_kana, "苗字カナ" %><br />
    <%= f.text_field :last_name_kana%>
  </div>

  <div class="field">
    <%= f.label :first_name_kana, "名前カナ" %><br />
    <%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <%= f.label :gender, "姓" %><br />
    <%= f.select :gender, Customer.genders.keys %>
  </div>

  <div class="field">
    <%= f.label :birthday, "誕生日" %><br />
    <%= f.date_select :birthday, :use_month_numbers => true, :use_two_digit_numbers => true, start_year: 1930 %>
  </div>


  <div class="actions">
    <%= f.submit "編集完了" %>
  </div>
<% end %>
