<h2>ユーザー新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :last_name, "苗字" %><br />
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.label :first_name, "名前" %><br />
    <%= f.text_field :first_name %>
  </div>

 <div class="field">
    <%= f.label :last_name_kana, "苗字カナ" %><br />
    <%= f.text_field :last_name_kana%>
  </div>

  <div class="field">
    <%= f.label :first_name_kana, "名前カナ" %><br />
    <%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <%= f.label :gender, "姓" %><br />
    <%= f.select :gender, Customer.genders.keys, {prompt: "選択してください"} %>
  </div>

  <div class="field">
    <%= f.label :birthday, "誕生日" %><br />
    <%= f.date_select :birthday, :use_month_numbers => true, :use_two_digit_numbers => true, start_year: 1930 %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード確認" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<%= render "customers/shared/links" %>
