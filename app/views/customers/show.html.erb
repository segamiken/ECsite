<h2>基本情報</h2>

<div>
	メールアドレス：<%= @customer.email %>
</div>

<div>
	苗字：<%= @customer.last_name %>
</div>

<div>
	名前：<%= @customer.first_name %>
</div>

<div>
	カナ：<%= @customer.last_name_kana %>
</div>

<div>
	カナ：<%= @customer.first_name_kana %>
</div>

<div>
	性別：<%= @customer.gender %>
</div>

<div>
	誕生日：<%= @customer.birthday %>
</div>


<h2>登録住所</h2>
<div>
	<% @customer.client_addresses.each do |a| %>
		<%= a.postal_code %> <br>
 		<%= a.address %> <br>
 		<%=link_to "住所の変更", edit_client_address_path(a.id) %>

	<% end %>
</div>



<% if customer_signed_in? %>
<% if @customer.id == current_customer.id %>
<%=link_to "基本情報の編集", edit_customer_path(params[:id]) %>

<%=link_to "住所の追加", new_client_address_path %>


<%=link_to "カート内商品を見る", cart_products_path %>

<% end %>
<% end %>

