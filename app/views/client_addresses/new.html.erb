
<h2>住所の追加</h2>

<%= form_for @address,url: client_addresses_path do |f| %>
  <div class="field">
    <%= f.label :postal_code, "郵便番号" %><br />
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    <%= f.label :address, "住所" %><br />
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :name, "お届け先氏名" %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :name_kana, "氏名(カナ)" %><br />
    <%= f.text_field :name_kana %>
  </div>


  <div class="actions">
    <%= f.submit "住所の登録" %>
  </div>
<% end %>

